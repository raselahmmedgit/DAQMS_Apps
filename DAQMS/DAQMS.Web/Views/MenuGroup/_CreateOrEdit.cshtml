@model  DAQMS.DomainViewModel.MenuGroupViewModel

<div class="row-fluid form-horizontal">

    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.ModuleId, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownListFor(model => model.ModuleId, Model.ModuleList, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.GroupName, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
    
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.SerialNo, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.SerialNo, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.IconClass, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.IconClass, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
</div>
