@model  DAQMS.DomainViewModel.UserViewModel

<div class="row-fluid form-horizontal">

    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.LoginID, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.LoginID, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            @Html.LabelFor(model => model.UserPass, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(model => model.UserPass, new { @class = "form-control required" })
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.UserConfirmPassword, new { @class = "control-label" })
                <div class="controls">
                    @Html.PasswordFor(model => model.UserConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.ContactID, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.ContactID, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.UserEmail, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="inline">
                        <input type="checkbox" name="IsActive">
                        <span class="lbl">&nbsp;Active User</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="inline">
                        <input type="checkbox" name="IsAdmin">
                        <span class="lbl">&nbsp;Admin User</span>
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="inline">
                        <input type="checkbox" name="IsChangePassword">
                        <span class="lbl">&nbsp;User must change password next login</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="inline">
                        <input type="checkbox" name="IsLocked">
                        <span class="lbl">&nbsp;Locked User</span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid form-horizontal">
    <div class="span1">
    </div>
    <div class="span6">
        <table id="table_report" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th width="10%" style="text-align: center;">
                        <label class="inline">
                            <input type="checkbox" name="IsAll">
                            <span class="lbl">&nbsp;All</span>
                        </label>
                    </th>
                    <th width="45%" style="text-align: center;">
                        Roles
                    </th>
                    <th width="45%" style="text-align: center;">
                        Module
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.UserRoleList != null)
                {
                    foreach (var x in Model.UserRoleList)
                    {
                        @Html.Partial("_UserRoleList", x);
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">

    $(function () {

        $('table th input:checkbox').on('click', function () {
            var that = this;
            $(this).closest('table').find('tr > td:first-child input:checkbox')
            .each(function () {
                this.checked = that.checked;
                $(this).closest('tr').toggleClass('selected');
            });

        });
    });
</script>