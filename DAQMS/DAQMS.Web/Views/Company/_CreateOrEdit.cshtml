@model  DAQMS.DomainViewModel.CompanyViewModel

<div class="row-fluid form-horizontal">

    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.CompanyName, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
    
    <div class="row-fluid WrapperFluid">
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.Fax, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control required" })
                </div>
            </div>
        </div>
    </div>
</div>
