@model  DAQMS.DomainViewModel.TempSensorViewModel

@{
    ViewBag.Title = "Tempture's Sensor Line Chart";

}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<form id="frmSearch" method="post" action="">
    <div class="table-header">
        Tempture's Sensor Line Chart
    </div>

    <div class="dataTables_wrapper row-fluid:first-child form-horizontal">
        <div class="row-fluid">
            <div class="span6">
                <div class="control-group">
                    @Html.LabelFor(model => model.CompanyId, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(model => model.CompanyId, Model.CompanyList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="span6">
                    <div class="control-group">
                        @Html.LabelFor(model => model.DateRangeFrom, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.DateRangeFrom, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="control-group">
                        @Html.LabelFor(model => model.DateRangeTo, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.DateRangeTo, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="control-group">
                    @Html.LabelFor(model => model.ProjectId, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(model => model.ProjectId, Model.ProjectList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="control-group">
                    @Html.LabelFor(model => model.ValueType, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(model => model.ValueType, Model.ValueTypeList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="control-group">
                    @Html.LabelFor(model => model.DeviceId, new { @class = "control-label" })
                    <div class="controls">
                        @Html.DropDownListFor(model => model.DeviceId, Model.DeviceList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="span6">
                <div class="control-group">
                    @Html.LabelFor(model => model.Sensor, new { @class = "control-label" })
                    <div class="controls">
                        @foreach (var item in Model.SensorList)
                        {
                            <div class="checkbox icheck">
                                <label>
                                    <input name="Sensor[]" value="@item.Value" type="checkbox"> @item.Text
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" class="btn btn-small btn-success" value="Search" name="btnSearch" style="margin-left:5px;" />
                        @Html.ActionLink("  Refresh", "Index", null, new { @class = "icon-refresh btn btn-small btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="DataList">
        <div class="row-fluid">

            <table id="table_report" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center"> Date </th>
                        <th class="center">T1</th>
                        <th class="center">T2</th>
                        <th class="center">T4</th>
                        <th class="center">T5</th>
                        <th class="center">T6</th>
                        <th class="center">T7</th>
                        <th class="center">T8</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</form>
<script src="~/Scripts/App/Report.js"></script>
<script type="text/javascript">
    $(function () {
        Report.init();
    })
</script>


